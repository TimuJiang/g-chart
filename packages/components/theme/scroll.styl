@import "common/var.styl"

html,body,ul,div
	-ms-scrollbar-darkshadow-color #0a2457
	-ms-scrollbar-highlight-color  #0a2457
	-ms-scrollbar-arrow-color #112757
	-ms-scrollbar-face-color #112757
	-ms-scrollbar-base-color #000000
	-ms-scrollbar-track-color #000000
	&::-webkit-scrollbar
		width 8px
		height 8px
		background-color #b5b1b1
	&::-webkit-scrollbar-track
		-webkit-box-shadow inset 0 0 6px rgba(0, 0, 0, 0.3)
		background-color $background-color
	&::-webkit-scrollbar-thumb
		border-radius 8px
		-webkit-box-shadow inset 0 0 6px rgba(0, 0, 0, .3)
		background-color #112757
